<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="200dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:elevation="60dp"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    android:foreground="?android:attr/selectableItemBackground">
    <!---->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/species_image"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:src="@drawable/ico_default_specy"/>

        <!--<View
            android:id="@+id/specie_sep"
            android:layout_below="@id/species_image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/base_lightgray" />-->

        <TextView
            android:id="@+id/species_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="Lemuris penalis"
            android:layout_below="@id/species_image"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="2"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>


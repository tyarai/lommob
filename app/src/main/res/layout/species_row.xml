<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="4dp"
    >

    <ImageView
        android:id="@+id/specie_image"
        android:layout_width="@dimen/author_size"
        android:layout_height="@dimen/author_size"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_more_horiz_black_48dp" />

    <TextView
        android:id="@+id/specie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/specie_image"
        android:text="Title"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/specie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/specie_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/specie_image"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="Description"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/select_specie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_specy"
        android:visibility="gone"
        />


</RelativeLayout>
